@using System.Web.Optimization
<!DOCTYPE html>
<html>
    <head>
        <title>Where is Keith's RV?</title>
        <base href="@Url.Content("~/")">
        <link href="//fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
        <link href="//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css" rel="stylesheet" type="text/css" />
        <meta name="viewport" content="initial-scale=1.0,width=device-width">
        @Styles.Render(BundleConfig.CssBundleVirtualPath)
    </head>
    <body>
        @RenderBody()
        <script src="//cdnjs.cloudflare.com/ajax/libs/require.js/2.1.14/require.min.js" data-main="@Url.Content(BundleConfig.ScriptBundleVirtualPath)?"></script>
    </body>
</html>
